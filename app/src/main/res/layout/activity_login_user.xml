<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/putih"
        >
        <RelativeLayout
            android:id="@+id/customToolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/blue2">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_backward_white"
                android:id="@+id/loginBack"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Login"
                android:textColor="@color/putih"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/loginBack"
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                />
            <ImageView
                android:layout_width="@dimen/width70"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/log"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/customToolbar"
            >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:src="@drawable/logo"
                    android:layout_marginTop="@dimen/margin_big"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/logo"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADMIN"
                android:id="@+id/textLogin"
                android:textColor="@color/hitam"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_below="@+id/logo"
                android:layout_marginTop="30dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textLogin"
                android:layout_marginTop="10dp"
                android:paddingBottom="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height40"
                    android:layout_margin="5dp"
                    android:hint="Email"
                    android:textColor="@color/hitam"
                    android:textColorHint="@color/grayMain"
                    android:background="@drawable/border_edit_text"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userEmail"
                    android:id="@+id/pass"
                    >
                    <EditText
                        android:id="@+id/userPass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height40"
                        android:layout_margin="5dp"
                        android:hint="Pass"
                        android:textColor="@color/hitam"
                        android:textColorHint="@color/grayMain"
                        android:background="@drawable/border_edit_text"
                        android:paddingLeft="10dp"
                        android:paddingRight="50dp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        />

                    <Button
                        android:layout_width="27dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:theme="@style/MyCheckbox"
                        android:id="@+id/show_password"
                        android:background="@drawable/ic_dont_show"
                        />
                </RelativeLayout>

                <Button
                    android:id="@+id/userLogin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/pass"
                    android:layout_margin="5dp"
                    android:background="@color/blue2"
                    android:text="MASUK SEBAGAI ADMIN"
                    android:textColor="@color/putih"
                    />
                <Button
                    android:id="@+id/userRegister"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/userLogin"
                    android:layout_margin="5dp"
                    android:text="DAFTAR SEBAGAI ADMIN"
                    android:background="@drawable/border_btn_register"
                    android:textColor="@color/blue2"
                    android:elevation="8dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>