<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customdialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:layout_margin="@dimen/margin_standard"
    android:background="@drawable/border_rl_putih"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_dialog_fragment"
            />
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/img_dialog_fragment"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Nama       :"
            />
        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_nama"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Alamat     :"
            />
        <TextView
            android:id="@+id/kontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_alamat"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="Kontak     :"
            />
        <TextView
            android:id="@+id/skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_kontak"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Skill          :"
            />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_skill"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Status     :"
            />
        <TextView
            android:id="@+id/text_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nama"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/img_dialog_fragment"
            android:layout_margin="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/text_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alamat"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_nama"
            android:layout_margin="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/text_kontak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kontak"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_alamat"
            android:layout_margin="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/text_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kontak"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_kontak"
            android:layout_margin="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kontak"
            android:textColor="@color/hitam"
            android:textSize="@dimen/title_font"
            android:layout_below="@+id/text_skill"
            android:layout_margin="@dimen/margin_small"
            />
        <Button
            android:id="@+id/dialog_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:layout_below="@+id/text_status"
            android:background="@drawable/border_btn_red"
            android:layout_marginTop="@dimen/margin_standard"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:layout_below="@+id/dialog_delete"
            android:background="@drawable/border_btn_login"
            android:layout_marginTop="@dimen/margin_standard"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/dialog_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BATAL"
            android:layout_below="@+id/dialog_edit"
            android:background="@drawable/border_btn_login"
            android:layout_marginTop="@dimen/margin_standard"
            />
    </RelativeLayout>

</ScrollView>