<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putihGelap1"
    android:padding="@dimen/margin_small"
    >
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_tahun_anggota"
        android:id="@+id/spinner_angkatan"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:popupBackground="@drawable/border_rl_blue"
        >
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_angkatan"
        android:layout_margin="@dimen/margin_standard"
        >
        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:shimmer_animation_duration="1200"
            android:layout_margin="@dimen/margin_standard"
            android:background="@drawable/border_rl_gray_pinggir"
            android:elevation="8dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@color/background"
                    android:id="@+id/img1"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:src="@color/background"
                    android:layout_toRightOf="@+id/img1"
                    android:id="@+id/img4"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/margin_standard"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:src="@color/background"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_below="@+id/img4"
                    android:id="@+id/img5"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/margin_standard"
                    />


            </RelativeLayout>

        </io.supercharge.shimmerlayout.ShimmerLayout>
        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:shimmer_animation_duration="1200"
            android:layout_margin="@dimen/margin_standard"
            android:background="@drawable/border_rl_gray_pinggir"
            android:elevation="8dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@color/background"
                    android:id="@+id/amg1"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:src="@color/background"
                    android:layout_toRightOf="@+id/amg1"
                    android:id="@+id/amg4"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/margin_standard"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:src="@color/background"
                    android:layout_toRightOf="@+id/amg1"
                    android:layout_below="@+id/amg4"
                    android:id="@+id/amg5"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/margin_standard"
                    />


            </RelativeLayout>

        </io.supercharge.shimmerlayout.ShimmerLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/grid_anggota"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_standard"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/margin_standard"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_standard"
        android:layout_below="@+id/spinner_angkatan"
        >

    </GridView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner_angkatan"
        android:layout_marginTop="@dimen/margin_standard"
        android:id="@+id/rc_anggota"
        android:visibility="gone"
        >

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/border_btn_circle_blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_tambah_anggota"
        android:padding="@dimen/margin_standard"
        android:layout_margin="@dimen/margin_small"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tambah_white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/border_btn_circle_blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/btn_tampil"
        android:layout_margin="@dimen/margin_small"
        android:padding="@dimen/margin_standard"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid"
            android:layout_centerInParent="true"
            android:id="@+id/tampil"
            />
    </RelativeLayout>

</RelativeLayout>